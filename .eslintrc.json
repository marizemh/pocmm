{
    "env": {
        "browser": true,
        "es2021": true,
        "jquery": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "comma-dangle": "off",
        "indent": "off",
        "no-tabs": "off",
        "no-mixed-spaces-and-tabs": "off",
        "quotes": "off",
        "arrow-parens": "off",
        "object-curly-newline": "off",
        "no-param-reassign": ["error", { "props": true, "ignorePropertyModificationsFor": ["itemButton"] }],
        "max-len": ["error",{
            "code": 140
        }],
        "no-restricted-syntax": "off"
    }
}
